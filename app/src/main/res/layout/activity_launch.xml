<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.LaunchActivity">

    <Button
        android:id="@+id/pokemon_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokemon Activity"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/image_upload_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Upload Activity"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_activity"
        />



</androidx.constraintlayout.widget.ConstraintLayout>