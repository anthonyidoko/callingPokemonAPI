<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/contentHolder"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="@color/card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/pokemonImage"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="@+id/contentHolder"
        app:layout_constraintStart_toStartOf="@+id/contentHolder"
        app:layout_constraintTop_toTopOf="@+id/contentHolder" />

    <TextView
        android:id="@+id/pokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pokemon name"
        android:textSize="25sp"
        android:elevation="2dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/contentHolder"
        app:layout_constraintEnd_toEndOf="@+id/contentHolder"
        app:layout_constraintStart_toStartOf="@+id/contentHolder" />

</androidx.constraintlayout.widget.ConstraintLayout>